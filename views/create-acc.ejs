<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/style2-logged-user.css">
    <title>Denhub | Create Account</title>
  </head>
  <body>
     <header id="header-home" class="fixed-top">  
      <nav class="navbar navbar-expand-lg navbar-light">
         <a class="navbar-brand" href="/"><big><i>D</i></big><span>enhub</span></a>
         <span class="navbar-toggler-icon mobile-view slide-toggler-animate"  type="button"  data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample"  data-target="#offcanvasExample"  aria-expanded="false" aria-label="Toggle navigation"></span>
 
         <!--for mobile-->
         <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
           <div class="offcanvas-header">
             <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
           </div>
           <div class="offcanvas-body">
             <ul class="navbar-nav">
               <li class="nav-item ">
                 <a class="nav-link"style="color: var(--clr-text-nav);" href="/">Home <span class="sr-only">(current)</span></a>
               </li>
               <hr>
              <li class="nav-item">
                <a class="nav-link " style="color: var(--clr-text-nav);" href="/login">Login</a>
              </li>
              <hr>
             </ul>
           </div>
         </div>
 
         <!--for large screen-->
         <div class="collapse navbar-collapse" id="#offcanvasExample">
            <ul class="navbar-nav m-auto">
               <li class="nav-item ">
                 <a class="nav-link pop-out"><i class=" fa fa-user nav-icons mobile-view"></i>  <span class="sr-only">(current)</span></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link pop-out"></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link pop-out"></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link pop-out"></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link pop-out"></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link pop-out"></a>
               </li>
             </ul>
           <span>
             <ul class="navbar-nav">
               <li class="nav-item ">
                 <a class="nav-link pop-out" href="/login"><i class=" fa fa-user nav-icons mobile-view"></i><button type="button" class="btn btn-outline-dark login-btn">Login</button></a>
               </li>
             </ul>
           </span>
         </div>
      </nav>
     </header>

     <main>
        <div class="container-fluid section1-login">
            <div class="row">
               <div class="col-lg-6 desktop-view">
                  <p>something is here</p>
               </div>
               
               <div class="col-lg-6 login-animate">
                  <form action="/register" method="POST" class="login" id="registration-form">
                     <% regErrors.forEach(function(message) { %>
                        <div class="alert alert-danger small"> <%= message %></div>
                     <% })%>
                     <div class="row">
                        <div class="form-group col-6 ">
                           <label for="firstname-register">First Name</label>
                           <input name="firstname" class="form-control" id="firstname-register"  autocomplete="off" autofocus>
                           <small id="emailHelp" class="form-text text-muted"></small>
                        </div>
                        <div class="form-group col-6 ">
                           <label for="lastname-register">Last Name</label>
                           <input name="lastname" class="form-control" id="lastname-register" aria-describedby="emailHelp" autocomplete="off">
                           <small id="emailHelp" class="form-text text-muted"></small>
                        </div>
                     </div>
                  
                     <div class="form-group ">
                        <label for="username-register">Username</label>
                        <input name="username" class="form-control" id="username-register" aria-describedby="emailHelp"  placeholder="select a username" autocomplete="off">
                        <small id="emailHelp" class="form-text text-muted"></small>
                     </div>
                     <div class="form-group ">
                        <label for="email-register">Email</label>
                        <input name="email"  class="form-control" id="email-register" aria-describedby="emailHelp" placeholder="e.g@email.com" autocomplete="off">
                        <small id="emailHelp" class="form-text text-muted">Enter a valid email address.</small>
                     </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input name="password" type="password" class="form-control" id="exampleInputPassword2" autocomplete="off" placeholder="select your password">
                        <small id="emailHelp" class="form-text text-muted">At least 8 characters long.</small>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" onclick="showCreatePass()">
                        <label class="form-check-label" for="exampleCheck1">Show Password?</label>
                    </div>
                    <button type="submit" class="btn btn-secondary col-12">Create account</button>
                  </form>
               </div>
            </div><br>
            <div class="desktop-view">
               <hr class="hr-1 text-center">
               <div class="row pop-out">
                  <div class="col-12 text-center">
                     <a href="/"><p class="lead login-home desktop-view">Home</p></a>
                  </div>
               </div>
               <hr class="hr-1-1 text-center">
            </div>
        </div>
     </main>

     <%- include('includes/footer') %>
     <script>
        let state2 = false;
        function showCreatePass(){
          if (state2) {
              document.getElementById("exampleInputPassword2").setAttribute("type", "password");
              state2 =false;
          }
          else {
              document.getElementById("exampleInputPassword2").setAttribute("type", "text");
              state2 =true;
          }
        }
     </script>

    <%- include('includes/script-footer') %>
   </body>
</html>