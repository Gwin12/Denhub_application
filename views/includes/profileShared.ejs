             <div class="col-4 text-center">
                   <div class="div-nav-select">
                      <a href="/profile/<%= profileUsername %>"><button class="btn btn-secondary" >Posts </button></a>
                   </div>
             </div>
             <div class="col-4 text-center">
                   <div class="">
                      <a href="/profile/<%= profileUsername %>/followers"><button class="btn btn-secondary" >Followers </button></a>
                   </div>
             </div>
             <div class="col-4 text-center">
                   <div class="">
                      <a href="/profile/<%= profileUsername %>/following"><button class="btn btn-secondary" >Following </button></a>
                   </div>
             </div>
          </div>
       </div>