<section class="profile-modal">
    <div class="modal fade " id="profile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
       <div class="modal-dialog modal-dialog-scrollable">
       <div class="modal-content">
             <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel1">Profile</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
             </div>
             <div class="modal-body profile-body">
                <img class="profile-image" src="#" alt="">
                <div class="profile-following">
                   <p><%= user.username %></p>
                   <a href="#post-list"><span class="profile-posts-num"><big class="posts-num">10</big> Posts</span><i class="vr-profile"></i></a>
                   <a href="#following-list"><span><big class="followers-num">100</big>Followers</span><i class="vr-profile"></i></a>
                   <a href="#followers-list"><span><big class="followers-num">20</big>Following</span></a>
                </div>
 
                
                <div class="profile-posts">
                   <div class="container-fluid">
                      <div class="row">
                         <div class="col-4">
                            <form action="" method="post">
                               <a type="submit" href="/create-post" class="btn btn-secondary">Create post</a>
                            </form>
                         </div>
                         <div class="col-4">
                            <a href="#followers-list"><button class="btn btn-secondary">Followers</button></a>
                         </div>
                         <div class="col-4">
                            <a href="#following-list" ><button class="btn btn-secondary">Following</button></a>
                         </div>
                      </div>
                   </div>
                   <!--your post-->
                   <div class="your-posts" id="post-list">
                      <hr>
                      <h5> Your Posts</h5>
                      <hr>
                      <ul>
                         <li>
                            <h4>Title</h4>
                            <small><a href="">@username </a> .12/12/2021</small>
                            <a href="#" class="text-primary mr-2 edit-trash" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></a>
                            <form class="delete-post-form d-inline" action="#" method="POST">
                               <button class="delete-post-button text-danger edit-trash" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash"></i></button>
                            </form>
                            <div class="collapse" id="collapseExample-1">
                               <div class="card card-body moreinfo-body">
                                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Provident quod consectetur rerum incidunt, exercitationem quisquam, obcaecati, explicabo minus optio voluptatum vel minima temporibus voluptatibus vero placeat pariatur eaque iste voluptate.
                               </div>
                            </div>
                            <div class="post-dropdown"><a data-toggle="collapse" title="more" href="#collapseExample-1" role="button" data aria-expanded="false" aria-controls="collapseExample"><i class="fas fa-arrow-down"></i></a></div>
                         </li>
                         <hr>
                         
                      </ul>
                   </div><br><br>
                   <!--following-->
                   <div id="following-list">
                      <hr>
                      <h5>Following</h5>
                      <hr>
                   </div><br><br>
 
                   <!--followers-->
                   <div id="followers-list">
                      <hr>
                      <h5>Followers</h5>
                      <hr>
                   </div>
                </div>
                <br>
             </div>
             <div class="modal-footer profile-footer">
                   <button type="button" class="btn btn-secondary col-12" data-dismiss="modal">Close</button>
             </div>
          </div>
       </div>
       </div>
    </div>
 </section>