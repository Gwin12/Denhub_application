    <%- include('includes/header-home') %>
    <button title="Darkmode" id="dark-mode-toggle" aria-label="toggle dark mode" class="dark-moon-log"><i class="fas fa-moon  login-animate dark-mode-toggle " ></i></button>
    </header>


    <main style="padding: 0% 20%;">
        <br>
        
        <section class="create-post">
            <%- include('includes/flash') %>
            <form action="/post/<%= post._id %>/edit" method="POST">
                <div class="form-group">
                <label for="title" class="form-label">Title</label>
                <input class="form-control" value="<%= post.title %>" name="title" type="text" id="title" autofocus><br>
                </div>

                <div class="form-group">
                    <div class="mb-3">
                    <label for="body" class="form-label">Body Content</label>
                    <textarea name="body" class="form-control" id="body" rows="9"><%= post.body %></textarea>
                    </div>
                </div>
                <button class="btn btn-secondary" type="submit">Save Updates</button>
            </form>
            <br>
            <ul>
               <small>* USE THE FOLLOWING SYNTAX TO STYLE YOUR POST *</small>
               <li><small class="form-text text-muted"> -  ** ** for <b>BOLD TEXT</b>. </small></li>
               <li><small class="form-text text-muted"> -  * * for <i>Italic text</i>. </small></li>
               <li><small class="form-text text-muted"> - ~~ ~~ for <s>Strikethrough</s>. </small></li>
               <li><small class="form-text text-muted"> - Drop down twice for paragraph. </small></li>
            </ul>
        </section>
        <div>
        <hr class="hr-1 text-center">
        <div class="row pop-out">
            <div class="col-12 text-center">
                <a href="/"><p class="lead login-home">Home</p></a>
            </div>
        </div>
        <hr class="hr-1-1 text-center">
        </div>

        
    </main>



<%- include('includes/footer') %>


<%- include('includes/script-footer') %>
</body>
</html>